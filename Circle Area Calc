#include <iostream>
#include <iomanip>

using namespace std;

const double PI = 3.14;

double calculateArea(double radius)
{
    return PI * radius * radius;
}

int main()
{
    double radius;
    double area;

    cout << "Enter the radius of the circle: ";
    cin >> radius;

    area = calculateArea(radius);

    cout << fixed << setprecision(2) << "The area of the circle is: " << area << " square units" << endl;

    return 0;
}
