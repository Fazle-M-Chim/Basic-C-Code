# include <iostream>
# include <iomanip>

using namespace std;

const int Array_Size = 10;

int main() {
    double numbers[Array_Size];
    double sum = 0;
    double average;

    cout << "Enter 10 double values:" << endl;

    for (int i = 0; i < Array_Size; i++) {
        cin >> numbers[i];
        sum += numbers[i];
    }

    average = sum / Array_Size;

    cout << fixed << setprecision(2) << "The average of the 10 double values is: " << average << endl;

    return 0;
}
